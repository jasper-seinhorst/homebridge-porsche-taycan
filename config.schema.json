{
  "pluginAlias": "PorscheTaycan",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "username": {
        "title": "Porsche Connect username",
        "type": "string",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "Porsche Connect password",
        "type": "string",
        "required": true,
        "default": ""
      },
      "pollInterval": {
        "title": "Poll interval (in minutes)",
        "type": "number",
        "required": true,
        "default": 30
      },
      "chargerDevice": {
        "title": "Charger device",
        "type": "string",
        "required": true,
        "oneOf": [
          {
            "title": "Occupancy sensor",
            "enum": [
              "occupancy"
            ]
          },
          {
            "title": "Contact sensor",
            "enum": [
              "contact"
            ]
          }
        ]
      },
      "batteryDevice": {
        "title": "Expose SoC as humidity sensor",
        "default": false,
        "type": "boolean",
        "description": "By default, the SoC is exposed as characteristic of the charger device. However, it's possible to configure the SoC to be presented as humidity sensor instead, which allows for incorporating SoC-based automations within the Home app."
      },
      "lowBattery": {
        "title": "Low battery level",
        "type": "integer",
        "minimum": 1,
        "maximum": 100,
        "default": 35,
        "description": "Which battery level in percentage is considered low"
      }
    }
  }
}