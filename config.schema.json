{
  "pluginAlias": "PorscheTaycan",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "username": {
        "title": "Porsche Connect username",
        "type": "string",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "Porsche Connect password",
        "type": "string",
        "required": true,
        "default": ""
      },
      "pollInterval": {
        "title": "Poll interval (in minutes)",
        "type": "number",
        "required": true,
        "default": 30
      },
      "chargerDevice": {
        "title": "Charger device",
        "type": "string",
        "required": true,
        "oneOf": [
          {
            "title": "Occupancy sensor",
            "enum": [
              "occupancy"
            ]
          },
          {
            "title": "Contact sensor",
            "enum": [
              "contact"
            ]
          }
        ]
      },
      "lowBattery": {
        "title": "Low battery level",
        "type": "integer",
        "minimum": 1,
        "maximum": 100,
        "default": 35,
        "description": "Which battery level in percentage is considered low"
      }
    }
  }
}